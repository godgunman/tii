<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageSummary"
            android:src="@drawable/summary_news"
            android:adjustViewBounds="true"/>
    </ScrollView>

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/tv_news"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/tv_info"
        android:layout_alignTop="@+id/tv_news"
        android:layout_toEndOf="@+id/tv_news" />

    <TextView
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:id="@+id/tv_fees"
        android:layout_alignTop="@+id/tv_info"
        android:layout_toEndOf="@+id/tv_info" />
</RelativeLayout>